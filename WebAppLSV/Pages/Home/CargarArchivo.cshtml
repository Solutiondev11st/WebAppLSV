@page
@model WebAppLSV.Pages.Home.CargarArchivoModel

@{
    ViewBag.Title = "WebAPP Liseo Santa Verónica";
    ViewData["Title"] = "CargarArchivo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Archivos de Pagos</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Controlarchivo.Nombre" class="control-label"></label>
                <input type="file" asp-for="Controlarchivo.Nombre" class="form-control" />
                <span asp-validation-for="Controlarchivo.Nombre" class="text-danger"></span>
                <input type="hidden" asp-for="Controlarchivo.Usuario" class="form-control" value="@User.Identity.Name" />
                <input type="hidden" asp-for="Controlarchivo.Estado" class="form-control" value="Cargado"/>

            </div>
            <div class="form-group">
                <label asp-for="Controlarchivo.Estado" class="control-label"></label>
                
                <span asp-validation-for="Controlarchivo.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Controlarchivo.FechaCargar" class="control-label"></label>
                <input type="datetime" asp-for="Controlarchivo.FechaCargar" class="form-control" value="@DateTime.Now"/>
                <span asp-validation-for="Controlarchivo.FechaCargar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Controlarchivo.FechaProceso" class="control-label"></label>
                <input type="datetime" asp-for="Controlarchivo.FechaProceso" class="form-control" value="@DateTime.Now"/>
                

            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
